    <DataTemplate DataType="{x:Type local:LenseAFInstruction}">
        <nina:SequenceBlockView DataContext="{Binding}">
            <nina:SequenceBlockView.SequenceItemContent>
                <StackPanel Orientation="Horizontal">
                    
                    <ComboBox ItemsSource="{Binding Cams, Mode=OneWay}"
                              SelectedIndex="{Binding Index, Mode=TwoWay}"/>
                    
                    <TextBlock Text="  |  Rescan for Cameras -> "
                               VerticalAlignment="Center"/>
                    
                    <Button Width="26"
                            Height="26"
                            Command="{Binding Path=Reload}">
                        
                        <Image Source="{StaticResource reload}" Margin="2,2,2,2"/>
                    
                    </Button>

                    <TextBlock Text="  |  Stretch factor"
                               Margin="10,0,5,0"
                               VerticalAlignment="Center"/>
                    <TextBox Text="{Binding Path=StretchFactor}"
                             Width="60"
                             Height="25"/>

                </StackPanel>
            </nina:SequenceBlockView.SequenceItemContent>
        </nina:SequenceBlockView>
    </DataTemplate>

